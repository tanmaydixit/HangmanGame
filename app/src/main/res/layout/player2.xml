<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acolour2">
    <EditText
        android:layout_width="50dp"
        android:layout_height="68dp"
        android:text="Type"
        android:id="@+id/input1"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:layout_alignRight="@+id/hang"
        android:layout_alignEnd="@+id/hang"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="HANGMAN"
        android:id="@+id/hang"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="97dp"
        android:layout_height="63dp"
        android:text="ENTER"
        android:id="@+id/button"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignBottom="@+id/input1"
        android:layout_alignLeft="@+id/word"
        android:layout_alignStart="@+id/word"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/abc_text_size_large_material" />

    <TextView
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/word"
        android:text="MOVIE"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignBaseline="@+id/hang"
        android:layout_alignBottom="@+id/hang"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
